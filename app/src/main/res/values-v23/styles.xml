<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppLightTheme" parent="BaseLightTheme">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@android:color/white</item>
    </style>

    <style name="AppDarkTheme" parent="BaseDarkTheme">
        <item name="colorPrimaryDark">@color/colorStatusBarDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppPrimaryTheme" parent="BasePrimaryTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>
